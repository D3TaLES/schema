{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema_robot/status_vials.schema.json",
  "title": "status_vials",
  "description": "schema for robotics vial statuses",
  "type": "object",
  "properties": {
    "_id": {
      "description": "An identifier for the vial associated with home location on vial stand, e.g., A_03",
      "type": "string",
      "pattern": "^[A-Z]_\\d\\d$"
    },
    "experiment_uuid": {
      "description": "Experiment UUID associated with vial",
      "type": "string"
    },
    "experiment_name": {
      "description": "Experiment name associated with vial",
      "type": "string"
    },
    "vial_content": {
      "description": "List of vial content ",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "capped": {
      "description": "Vial is capped if true",
      "type": "boolean"
    },
    "current_location": {
      "description": "UUID associated with vial's current location",
      "type": "string"
    },
    "location_history": {
      "description": "List of UUIDs associated with vial's location history",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}

