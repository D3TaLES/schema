{
  "$id": "https://raw.githubusercontent.com/D3TaLES/schema/main/schema_robot/status_stations.schema.json",
  "title": "status_stations",
  "description": "schema for robotics station statuses",
  "type": "object",
  "properties": {
    "_id": {
      "description": "Name of station",
      "type": "string"
    },
    "current_wflow_name": {
      "description": "An name identifier for the workflow currently loaded",
      "type": "string"
    },
    "state": {
      "description": "Station state",
      "type": "string"
    },
    "available": {
      "description": "Station is available if true",
      "type": "boolean"
    },
    "current_content": {
      "description": "Vial _id currently in station",
      "type": "string"
    },
    "content_history": {
      "description": "List of vial _ids associated with station's location history",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}

